            </div>
          </div>
          <div>
            <h3 className="uppercase tracking-widest text-xs font-bold mb-8 text-slate-900">Navigation</h3>
            <ul className="space-y-5 text-sm text-slate-500 font-light">
              <li className="hover:text-amber-700 cursor-pointer transition-colors" onClick={() => setActiveTab('home')}>The Sanctuary</li>
              <li className="hover:text-amber-700 cursor-pointer transition-colors" onClick={() => setActiveTab('about')}>The Donna Jean Legacy</li>
              <li className="hover:text-amber-700 cursor-pointer transition-colors" onClick={() => setActiveTab('assistant')}>✨ Restoration Assistant</li>
              <li className="hover:text-amber-700 cursor-pointer transition-colors" onClick={() => setActiveTab('medical')}>For Professionals</li>
            </ul>
          </div>
          <div>
            <h3 className="uppercase tracking-widest text-xs font-bold mb-8 text-slate-900">Locations</h3>
            <ul className="space-y-5 text-sm text-slate-500 font-light italic">
              <li className="flex items-start gap-4"><MapPin className="w-4 h-4 text-amber-700 shrink-0 mt-1" /> Arlington, Virginia <br /> ( DMV Metro Area )</li>
              <li className="flex items-center gap-4"><Mail className="w-4 h-4 text-amber-700" /> victor@ourspacestudios.com</li>
            </ul>
          </div>
          <div>
            <h3 className="uppercase tracking-widest text-xs font-bold mb-8 text-slate-900">SEO Focus</h3>
            <ul className="space-y-3 text-[10px] text-slate-400 font-light uppercase tracking-widest leading-relaxed">
              <li>• Cranial Prosthesis Arlington VA</li>
              <li>• Medical Wig Specialist DC</li>
              <li>• Oncology Hair Loss Northern Virginia</li>
              <li>• 4C Medical Texture Specialist</li>
            </ul>
          </div>
        </div>
        <div className="border-t border-slate-200 pt-10 text-center text-[10px] text-slate-400 uppercase tracking-[.4em] font-medium italic">
          &copy; {new Date().getFullYear()} Our S.P.A.C.E. Studios • Licensed Cosmetology Educator • NPI Provider 
        </div>
      </div>
    </footer>
  );

  return (
    <div className="min-h-screen bg-white font-sans text-slate-900 selection:bg-amber-100 selection:text-amber-900">
      {/* Navigation */}
      <nav className={`fixed top-0 w-full z-50 transition-all duration-700 ${scrolled ? 'bg-white/95 backdrop-blur-md shadow-lg py-5' : 'bg-transparent py-10'}`}>
        <div className="max-w-7xl mx-auto px-8 flex justify-between items-center">
          <div 
            className="cursor-pointer group flex items-center gap-2"
            onClick={() => setActiveTab('home')}
          >
            <h1 className="text-2xl font-serif italic tracking-tight group-hover:text-amber-900 transition-colors">
              Our S.P.A.C.E. <span className="text-[10px] font-bold uppercase tracking-[.4em] ml-3 text-slate-400 group-hover:text-amber-700 transition-colors">Studios</span>
            </h1>
          </div>

          {/* Desktop Nav */}
          <div className="hidden lg:flex gap-12 items-center">
            {['home', 'about', 'services', 'assistant', 'medical'].map((tab) => (
              <button
                key={tab}
                onClick={() => setActiveTab(tab)}
                className={`uppercase tracking-widest text-[10px] font-bold transition-all relative after:content-[''] after:absolute after:bottom-[-8px] after:left-0 after:w-0 after:h-[1px] after:bg-amber-600 hover:after:w-full after:transition-all ${activeTab === tab ? 'text-amber-800 after:w-full' : 'text-slate-500 hover:text-slate-900'}`}
              >
                {tab === 'assistant' ? '✨ Assistant' : tab === 'medical' ? 'For Partners' : tab}
              </button>
            ))}
            <button 
              onClick={() => setActiveTab('services')}
              className="bg-slate-900 text-white px-8 py-3 uppercase tracking-widest text-[10px] font-bold hover:bg-amber-800 transition-all shadow-xl active:scale-95"
            >
              Consultation
            </button>
          </div>

          {/* Mobile Menu Toggle */}
          <button className="lg:hidden text-slate-900 p-2" onClick={() => setIsMenuOpen(!isMenuOpen)}>
            {isMenuOpen ? <X size={28} /> : <Menu size={28} />}
          </button>
        </div>
      </nav>

      {/* Mobile Menu Overlay */}
      {isMenuOpen && (
        <div className="fixed inset-0 bg-white z-[60] flex flex-col items-center justify-center animate-in fade-in zoom-in duration-500">
          <button className="absolute top-10 right-8 text-slate-900" onClick={() => setIsMenuOpen(false)}>
            <X size={32} />
          </button>
          {['home', 'about', 'services', 'assistant', 'medical'].map((tab) => (
            <button
              key={tab}
              onClick={() => { setActiveTab(tab); setIsMenuOpen(false); }}
              className="text-5xl font-serif italic mb-10 capitalize tracking-tight hover:text-amber-700 transition-colors"
            >
              {tab === 'assistant' ? '✨ Assistant' : tab === 'medical' ? 'For Partners' : tab}
            </button>
          ))}
          <Button className="mt-8" onClick={() => { setActiveTab('services'); setIsMenuOpen(false); }}>Book Consultation</Button>
        </div>
      )}

      {/* Main Content */}
      <main className="pt-0">
        {activeTab === 'home' && <HomePage />}
        {activeTab === 'about' && <AboutPage />}
        {activeTab === 'services' && <ServicesPage />}
        {activeTab === 'assistant' && <RestorationAssistant />}
        {activeTab === 'medical' && <MedicalPage />}
      </main>

      <Footer />
    </div>
  );
};

export default App;